<h1>Create a new Figure</h1>

<form action="/figures" method="post"> 
	<h3><label for="figure_name">Name: </label> <input id="figure_name" type="text" name="figure[name]" /></h3>

	<h2>Titles</h2>
	
		<% Title.all.each do |title| %>
			<ul>
				<li><%= title.name %><input value="<%= title.id%>" type="checkbox" name="figure[title_ids][]" ></li>
			</ul>
			<% end %>

	<h2>Create New Title: <br>
	<input id="new_title" type="text" name="title[name]" /></h2>



	<h2>Landmarks</h2>
	<ul>
	<% Landmark.all.each do |landmark| %> 
		<li><%= landmark.name %><input type="checkbox" value="<%= landmark.id %>" name="figure[landmark_ids][]" /></li>
	<% end %>
	</ul>

	<h2>Create New Landmark: </h2>
	<h3>Name: <input id="landmark_name" type="text" name="landmark[name]" />
	 Year: <input id="figure_year" type="integer" name="landmark[year_completed]" />
	<button>Create New Figure</button></h3>


</form>